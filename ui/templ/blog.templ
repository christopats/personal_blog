package templ

import "time"

type BlogPost struct {
	Slug        string
	Title       string
	Description string
	Date        time.Time
	Tags        []string
	ImagePath   string
	Content     string
}

templ Blog(posts []BlogPost) {
	<div class="container mx-auto p-4 ">
		<h1 class="text-3xl font-bold my-8">Blog Posts</h1>
		<div class="grid grid-cols-1 gap-4">
			for _, post := range posts {
				@BlogPostCard(post)
			}
		</div>
	</div>
}
